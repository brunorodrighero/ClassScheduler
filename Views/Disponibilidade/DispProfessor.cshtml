@model Professor

@{
    ViewData["Title"] = "Selecione o Professor";
}

<form asp-controller="Disponibilidade" asp-action="SelecionarProfessor" method="post">
    <div class="form-group mb-3">
        <label for="Id" class="form-label">Professor</label>
        <select asp-for="Id" asp-items="ViewBag.Professor" class="form-control">
            <option value="">Selecione o professor</option>
        </select>
        <span asp-validation-for="Id" class="text-danger"></span>
    </div>
    <div class="row justify-content-center">
        <div class="col-lg-4 col-md-6 col-sm-12 d-flex justify-content-center">
            <a class="btn btn-secondary w-100" role="button" asp-controller="Home" asp-action="Index">
                <i class="bi bi-skip-backward"></i> Voltar
            </a>
        </div>
        <div class="col-lg-4 col-md-6 col-sm-12 d-flex justify-content-center">
            <button type="submit" formaction="CriarDispProfessor" class="btn btn-primary w-100">
                <i class="bi bi-check2"></i> Criar
            </button>
            <button type="submit" formaction="MostrarDispProfessor" class="btn btn-primary w-100">
                <i class="bi bi-check2"></i> Mostrar
            </button>
        </div>
    </div>
</form>
