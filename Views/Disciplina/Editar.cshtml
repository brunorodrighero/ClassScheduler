@model Disciplina
@{
    ViewData["Title"] = "Editar Disciplina";
}
<div class="container text-center">

    <h1>Editar Disciplina</h1>

</div>

<form asp-controller="Disciplina" asp-action="EditarDisciplina" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group mb-3">
        <label for="Nome" class="form-label">Nome</label>
        <input type="text" asp-for="Nome" id="Nome" class="form-control" placeholder="Informe o nome da disciplina">
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label for="CursoId" class="form-label">Curso</label>
        <select asp-for="CursoId" asp-items="ViewBag.Cursos" class="form-control">
            <option value="">Selecione o curso</option>
        </select>
        <span asp-validation-for="CursoId" class="text-danger"></span>
    </div>
    <div class="row">
        <div class="form-group mb-3 col-lg-4 col-md-6 col-sm-12">
            <label for="CargaHoraria" class="form-label">Carga Horária</label>
            <input type="number" asp-for="CargaHoraria" id="CargaHoraria" class="form-control" placeholder="Informe a Carga Horária da disciplina, em horas">
            <span asp-validation-for="CargaHoraria" class="text-danger"></span>
        </div>
        <div class="form-group mb-3 col-lg-4 col-md-6 col-sm-12">
            <label for="Creditos" class="form-label">Créditos</label>
            <input type="number" asp-for="Creditos" id="Creditos" class="form-control" placeholder="Informe os créditos da disciplina">
            <span asp-validation-for="Creditos" class="text-danger"></span>
        </div>
        <div class="form-group mb-3 col-lg-4 col-md-6 col-sm-12">
            <label for="QuantAulasPorSemana" class="form-label">Quant Aulas/Semana</label>
            <input type="number" asp-for="QuantAulasPorSemana" id="QuantAulasPorSemana" class="form-control" placeholder="Informe a quantidade de aulas por semana.">
            <span asp-validation-for="QuantAulasPorSemana" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group mb-3">
        <label for="Descricao" class="form-label">Descrição da Disciplina</label>
        <input type="text" asp-for="Descricao" id="Descricao" class="form-control" placeholder="Informe a Descrição da disciplina">
        <span asp-validation-for="Descricao" class="text-danger"></span>
    </div>
    <div class="row justify-content-center">
        <div class="col-lg-4 col-md-6 col-sm-12 d-flex justify-content-center">
            <a class="btn btn-secondary w-100" role="button" asp-controller="Disciplina" asp-action="Index">
                <i class="bi bi-skip-backward"></i> Voltar
            </a>
        </div>
        <div class="col-lg-4 col-md-6 col-sm-12 d-flex justify-content-center">
            <button type="submit" class="btn btn-primary w-100">
                <i class="bi bi-pencil-square"></i> Editar
            </button>
        </div>
    </div>

</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}