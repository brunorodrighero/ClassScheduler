@model Professor
@{
    ViewData["Title"] = "Apagar Professor";
}

<div class="text-center">
    <h3>Realmente deseja apagar o professor @Model.Nome @Model.Sobrenome?</h3>
</div>

<a class="btn btn-primary w-100 mb-2" role="button" asp-controller="Professor" asp-action="Index"><i class="bi bi-skip-backward"></i> Cancelar Exclusão</a>
<a class="btn btn-danger w-100" role="button" asp-route-id="@Model.Id" asp-controller="Professor" asp-action="ApagarProfessor"><i class="bi bi-x-square"></i> Confirmar Exclusão</a>
