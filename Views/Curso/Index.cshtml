@using Humanizer.Localisation;
@model List<Curso>

@{
    ViewData["Title"] = Resource.CoursesListing;
}

<div class="container-fluid text-center">
    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-primary" asp-controller="Curso" asp-action="Criar">@Resource.AddNewCourse</a>
    </div>
    <br />
    <br />
    <h1>@Resource.CoursesListing</h1>

    <table id="table-cursos" class="table display">
        <thead>
            <tr>
                <th scope="col">@Resource.ID</th>
                <th scope="col">@Resource.Name</th>
                <th scope="col">@Resource.Duration</th>
                <th scope="col">@Resource.Description</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                foreach (Curso curso in Model)
                {
                    <tr>
                        <th scope="row">@curso.Id</th>
                        <td>@curso.Nome</td>
                        <td>@curso.Duracao</td>
                        <td>@curso.Descricao</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a role="button" class="btn btn-primary" asp-route-id="@curso.Id" asp-controller="Curso" asp-action="Editar">@Resource.Edit</a>
                                <a role="button" class="btn btn-danger" asp-route-id="@curso.Id" asp-controller="Curso" asp-action="Apagar">@Resource.Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            }            
        </tbody>
    </table>
</div>
