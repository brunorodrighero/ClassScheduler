<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">@Resource.CoursesListing</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-controller="Curso" asp-action="Criar">
                <i class="bi bi-plus-circle"></i> &nbsp; @Resource.AddNewCourse
            </a>
        </div>
    </div>
</div>

<div class="container-fluid text-center">
    <table id="table-cursos" class="table display">
        <thead>
            <tr>
                <th scope="col">@Resource.ID</th>
                <th scope="col">@Resource.Name</th>
                <th scope="col">@Resource.Duration</th>
                <th scope="col">@Resource.Description</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                foreach (Curso curso in Model)
                {
                    <tr>
                        <th scope="row">@curso.Id</th>
                        <td>@curso.Nome</td>
                        <td>@curso.Duracao</td>
                        <td>@curso.Descricao</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a role="button" class="btn btn-primary" asp-route-id="@curso.Id" asp-controller="Curso" asp-action="Editar"><i class="bi bi-pencil-square"></i> @Resource.Edit</a>
                                <a role="button" class="btn btn-danger" asp-route-id="@curso.Id" asp-controller="Curso" asp-action="Apagar"><i class="bi bi-x-square"></i> @Resource.Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            }            
        </tbody>
    </table>
</div>
