@model Curso
@{
    ViewData["Title"] = "Adicionar Curso";
}
<div class="container-fluid text-center">

    <h1>Adicionar Curso</h1>

</div>

<form asp-controller="Curso" asp-action="Criar" method="post">
    <div class="form-group mb-3">
        <label for="Nome" class="form-label">Nome</label>
        <input type="text" asp-for="Nome" id="Nome" class="form-control" placeholder="Informe o nome do curso">
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label for="Duracao" class="form-label">Duração</label>
        <input type="number" asp-for="Duracao" id="Duracao" class="form-control" placeholder="Informe a duração do curso, em semestres">
        <span asp-validation-for="Duracao" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label for="Descricao" class="form-label">Descrição do Curso</label>
        <input type="text" asp-for="Descricao" id="Descricao" class="form-control" placeholder="Informe a Descrição do curso">
        <span asp-validation-for="Descricao" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary w-100 mb-2"><i class="bi bi-building-add"></i> Adicionar</button>
    <a class="btn btn-secondary w-100" role="button" asp-controller="Curso" asp-action="Index"><i class="bi bi-skip-backward"></i> Voltar</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}



