@model Curso
@{
    ViewData["Title"] = "Apagar Curso";
}

<div class="text-center">
    <h3>Realmente deseja apagar o curso: @Model.Nome</h3>
</div>

<a class="btn btn-primary w-100 mb-2" role="button" asp-controller="Curso" asp-action="Index"><i class="bi bi-skip-backward"></i> Cancelar Exclusão</a>
<a class="btn btn-danger w-100" role="button" asp-route-id="@Model.Id" asp-controller="Curso" asp-action="ApagarCurso">Confirmar Exclusão</a>
